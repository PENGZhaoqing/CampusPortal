<div class="row">
  <div class="col-sm-3 sidenav">
    <%= render "cooperators/sidenav" %>
  </div>

  <div class="col-sm-9">
    <h3 class="text-muted">Users under <%= @application.name %></h3>
    <hr>

    <ol class="breadcrumb">
      <li><%=link_to "Applications List",applications_cooperator_path(@cooperator)%></a></li>
      <li><%=link_to "Application #{@application.id}",oauth_application_path(@application)%></a></li>
      <li class="active">Users List</li>
    </ol>

    <hr>

    <ul class="nav nav-tabs">
      <li class="active"><%= link_to "Users List" %></li>
      <li><%= link_to "Add User", cooperator_add_users_path(@application) %></li>
    </ul>


    <br>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th>Access</th>
        <th>Disassociate</th>
      </tr>
      </thead>
      <tbody>
      <% @application.users.each do |user| %>
          <tr id="application_<%= user.id %>">
            <td><%= user.name %></td>
            <td><%= button_to "Manage Access", cooperator_edit_user_access_path(user, @application), method: :get, class: 'btn-xs btn-info' %></td>
            <td><%= button_to "Disassocaite", disassociate_user_access_path(user, @application), method: :get, class: 'btn-xs btn-danger' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
