<% provide(:title, "Forgot password") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="text-muted">Forgot password</h3>
      </div>
      <div class="panel-body">

        <%= form_for :password_reset, url: password_resets_path, html: {class: 'form-horizontal', role: 'form'} do |f| %>

            <div class="form-group">
              <%= f.label :email, class: 'col-sm-2 control-label' %>
              <div class="col-sm-9">
                <%= f.text_field :email, class: 'form-control',placeholder: "Please fill in the email applied"%>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-9">
                <%= f.submit "Submit", class: "btn btn-primary" %>
                <%= link_to "Cancel", root_path, :class => "btn btn-default" %>

              </div>
            </div>

        <% end %>
      </div>
    </div>
  </div>

</div>