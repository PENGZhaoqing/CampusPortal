<% content_for :body_class, "body-background" %>

<% @application.each do |app| %>
    <div class="col-sm-2">
      <div class="icon-container">

        <% if current_user.admin ||current_user.developer %>
            <%= image_tag app.picture.url if app.picture? %>
            <h5 style="color: black"><%= app.name %></h5>
        <% else %>
            <%= link_to app.homepage do %>
                <%= image_tag app.picture.url if app.picture? %>
                <h5 style="color: black"><%= app.name %></h5>
            <% end %>
        <% end %>

      </div>
    </div>
<% end %>

